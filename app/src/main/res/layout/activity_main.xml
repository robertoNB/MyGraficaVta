<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNom" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etVtas" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/etNom" android:hint="0"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnGuardar" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/etVtas"
            app:layout_constraintHorizontal_bias="0.498" android:onClick="guardarClic"/>
    <Button
            android:text="Graficas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGraficar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnGuardar"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.162"
            android:onClick="graficaClic"/>
</androidx.constraintlayout.widget.ConstraintLayout>